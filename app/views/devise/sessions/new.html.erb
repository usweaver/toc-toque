<div class="d-flex gap-4 align-item-center">
  <%= image_tag "login.jpg", alt: "Le Wagon", class: "w-50 rounded"%>
  <div class="d-flex flex-column w-50 justify-content-center">
    <h2>Se connecter</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                label: "E-mail",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                label: "Mot de passe",
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn btn-primary mb-3" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
