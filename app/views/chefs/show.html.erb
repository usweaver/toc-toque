<div class="d-flex gap-4 align-item-center">
  <img src=<%=@chef.profile_picture_url%> class="rounded w-100">
  <div class="d-flex flex-column">
  <h1 class="mb-4">Say Hi to <b> <%=@chef.first_name%> <%=@chef.last_name%></b></h1>
    <h4><i class="fa-solid fa-utensils"></i> <%=@chef.category%></h4>
    <hr>
    <h5><i class="fa-solid fa-location-dot"></i> <%= @chef.city%></h5>
    <h5><i class="fa-solid fa-phone"></i> <%=@chef.phone_number%></h5>
    <h5><i class="fa-solid fa-envelope"></i> <%=@chef.email %></h5>
    <hr>
    <h4><i class="fa-solid fa-dollar-sign"></i> <%=@chef.daily_price%> par jour</h4>

    <%if user_signed_in?%>
      <%= simple_form_for ([@chef, @booking]) do |f|%>
        <%=f.input :start_date, as: :date, html5: true%>
        <%=f.input :end_date, as: :date, html5: true%>
        <%=f.submit %>
      <% end %>
    <%end%>
    <hr>
    <%=link_to "Retour Ã  la homepage", root_path%>
  </div>
</div>
