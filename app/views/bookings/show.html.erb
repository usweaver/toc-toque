<div class="d-flex gap-4 align-item-center">
  <%= cl_image_tag @booking.chef.chef_picture.key, class: "rounded w-50" %>
  <div class="d-flex flex-column justify-content-start gap-3">
    <h1 class="mb-4">Votre réservation avec <b> <%=@booking.chef.first_name%> <%=@booking.chef.last_name%></b></h1>

    <div class="fs-5 fw-bold">
    <i class="fa-regular fa-calendar"></i> <%=  @booking.start_date.strftime("%d %B %Y") %>   <i class="fa-solid fa-greater-than"></i>   <%= @booking.end_date.strftime("%d %B %Y") %>
    </div>
    <hr class="border border-danger-emphasis border-1 opacity-75">
      <h5 class="mb-0"><i class="fa-solid fa-utensils"></i> <%=@booking.chef.category%></h5>
      <hr>
      <h5><i class="fa-solid fa-location-dot"></i> <%= @booking.chef.city%></h5>
      <h5><i class="fa-solid fa-phone"></i> <%=@booking.chef.phone_number%></h5>
      <h5><i class="fa-solid fa-envelope"></i> <%=@booking.chef.email %></h5>
      <hr>
      <%=link_to "Retour aux réservations", bookings_path, class: "btn btn-outline-primary w-50 align-self-center"%>
  </div>
</div>
